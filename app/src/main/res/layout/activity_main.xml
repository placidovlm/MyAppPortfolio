<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_main_page"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical" />

    <Button
        style="@style/PortfolioButtom"
        android:text="Reader"
        android:id="@+id/button5"
        android:onClick="runReader" />

    <Button
        style="@style/PortfolioButtom"
        android:text="Spotify Streamer"
        android:id="@+id/button_spotify"
        android:onClick="runSpotify" />

    <Button
        style="@style/PortfolioButtom"
        android:text="Football Scores"
        android:id="@+id/button2"
        android:onClick="runScores" />

    <Button
        style="@style/PortfolioButtom"
        android:text="Library"
        android:id="@+id/button3"
        android:onClick="runLibrary" />

    <Button
        style="@style/PortfolioButtom"
        android:text="Build It Bigger"
        android:id="@+id/button4"
        android:onClick="runBigger" />

    <Button
        style="@style/AccentPortfolioButtom"
        android:text="Capstone "
        android:id="@+id/button6"
        android:onClick="runCapstone"
        android:nestedScrollingEnabled="true" />

</LinearLayout>
